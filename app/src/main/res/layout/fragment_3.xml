<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment3">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_frag3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color">

        <LinearLayout
            android:id="@+id/layout_frag3_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="커리큘럼 게시판"
                android:textColor="@color/white"
                android:fontFamily="@font/main_font_bold"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/forum_layout"
        android:elevation="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:clickable="true"
            android:id="@+id/layout_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="15dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:srcCompat="@drawable/ic_clarity_heart_solid" />
            <TextView
                android:layout_gravity="center"
                android:text="좋아요 누른 글"
                android:fontFamily="@font/main_font_regular"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/layout_mypost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="15dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:srcCompat="@drawable/ic_ri_file_paper_2_fill"/>
            <TextView
                android:layout_gravity="center"
                android:text="내가 쓴글"
                android:fontFamily="@font/main_font_regular"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/layout_best"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="15dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:srcCompat="@drawable/ic_fa_solid_crown"/>
            <TextView
                android:layout_gravity="center"
                android:text="Best 게시글"
                android:fontFamily="@font/main_font_regular"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/forum_layout"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3px"
        android:elevation="16dp">

        <LinearLayout
            android:id="@+id/layout_forum1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true">
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:srcCompat="@drawable/ic_round_numbers"/>
            <TextView
                android:id="@+id/forum1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:paddingVertical="3sp"
                android:paddingHorizontal="5sp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:text="반도체 및 디스플레이 공학" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_forum2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true">
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:srcCompat="@drawable/ic_round_numbers"/>
            <TextView
                android:id="@+id/forum2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:paddingVertical="3sp"
                android:paddingHorizontal="5sp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:text="회로 및 임베디드 시스템 공학" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_forum3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true">
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:srcCompat="@drawable/ic_round_numbers"/>
            <TextView
                android:id="@+id/forum3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:paddingVertical="3sp"
                android:paddingHorizontal="5sp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:text="전자파 및 광전자 공학" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_forum4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true">
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:srcCompat="@drawable/ic_round_numbers"/>
            <TextView
                android:id="@+id/forum4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:paddingVertical="3sp"
                android:paddingHorizontal="5sp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:text="인공지능 및 신호처리" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_forum5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true">
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:srcCompat="@drawable/ic_round_numbers"/>
            <TextView
                android:id="@+id/forum5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:paddingVertical="3sp"
                android:paddingHorizontal="5sp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:text="정보 통신 공학" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_forum6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true">
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:srcCompat="@drawable/ic_round_numbers"/>
            <TextView
                android:id="@+id/forum6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:paddingVertical="3sp"
                android:paddingHorizontal="5sp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:text="임베디드 시스템 및 제어공학" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_forum7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true">
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:srcCompat="@drawable/ic_round_numbers"/>
            <TextView
                android:id="@+id/forum7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:paddingVertical="3sp"
                android:paddingHorizontal="5sp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:text="자유게시판" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>